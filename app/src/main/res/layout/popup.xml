<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_up_background"
    tools:context=".PopUp">

    <Button
        android:id="@+id/popUpSubmit"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ripple_effect"
        android:fontFamily="@font/quicksand_bold"
        android:foreground="@drawable/button_foreground"
        android:text="submit"
        android:textColor="@color/white"
        app:backgroundTint="@color/button_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popUpDailyExtendEdit"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <TextView
        android:id="@+id/popUpDailyExtendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_book"
        android:gravity="center"
        android:text="popUpDailyExtendText"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/popUpDailyExtendEdit"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:hint="How much to add: "
        android:importantForAutofill="no"
        android:inputType="number"
        android:text=""
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popUpDailyExtendText"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>